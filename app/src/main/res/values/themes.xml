<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieTray" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_800</item>
        <item name="colorPrimaryVariant">@color/cyan_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/cyan_800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.MovieTray.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MovieTray.Overlay" parent="Theme.MovieTray">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="Theme.MovieTray.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.MovieTray.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">?attr/colorPrimaryVariant</item>
    </style>
</resources>